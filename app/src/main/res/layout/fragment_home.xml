<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/relativeLayout">

        <Button
            android:id="@+id/tv_aboutUs"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/title_aboutus"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/tv_aboutMun"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/title_aboutmun"
            android:textSize="20sp"
            android:layout_below="@+id/tv_aboutUs"
            android:layout_alignStart="@+id/tv_aboutUs" />


        <Button
            android:id="@+id/tv_committees"
            android:layout_width="150dp"
            android:layout_height="112dp"
            android:padding="8dp"
            android:text="@string/title_committees"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/tv_aboutUs"/>

        <Button
            android:id="@+id/tv_apply"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/title_apply"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_committees"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_locate_us"
            android:src="@drawable/locate_us"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/iv_rate_us"
            android:layout_marginEnd="50dp"
            android:contentDescription="Locate Us"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_rate_us"
            android:src="@drawable/rate_us"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="Rate Us"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_credits"
            android:src="@drawable/credits"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_rate_us"
            android:layout_marginStart="50dp"
            android:contentDescription="Credits"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>